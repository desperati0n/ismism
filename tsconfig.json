{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/App.tsx", "src/main.tsx", "src/data", "src/components/GridSlider.tsx", "src/components/IsmDetail.tsx", "src/components/ResultCard.tsx", "src/components/SearchButton.tsx", "src/components/TopNavigation.tsx", "src/components/WaveTextBackground.tsx", "App.tsx", "main.tsx", "components", "data"],
	"exclude": [
		"vite.config.ts",
		"node_modules",
		"src/components/ui",
		"src/components/Comment.tsx",
		"src/services"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
